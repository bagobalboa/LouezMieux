{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}
<main class="w-100 d-flex flex-column justify-content-start align-items-center center-block text-center">
    <h1 class="my-5"> Se connecter </h1>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        {% if app.user %}
            <div class="mb-3">
                Vous êtes enregistré avec l'adresse mail {{ app.user.email }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Conectez-vous</h1>

        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>
    </form>
</main>

{% endblock %}