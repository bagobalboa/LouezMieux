{% extends "base.html.twig" %}

{% block title %}Toutes les annonces
{% endblock %}

{% block css %}
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="{{ asset('css/style.css') }}">
	<link rel="stylesheet" href="{{ asset('css/posting.css') }}">
	<link rel="stylesheet" href="{{ asset('css/listing-posting.css') }}">
{% endblock %}
{% block content %}

	{% for p in postings %}

		<div class="contenu">
			<img class="image" src="{{ asset('img/postings/' ~ p.photo1) }}" alt="">
			<img class="image" src="{{ asset('img/postings/' ~ p.photo2) }}" alt="">
			<img class="image" src="{{ asset('img/postings/' ~ p.photo3) }}" alt="">
			<img class="image" src="{{ asset('img/postings/' ~ p.photo4) }}" alt="">
			<img class="image" src="{{ asset('img/postings/' ~ p.photo5) }}" alt="">
		</div>

		<div class="ficheAnnonce">
			<div class="principal">

				<h1>{{p.adresse}}</h1>


				<p>{{p.description}}</p>
			</div>

			<div class="card-infos">
				{% if p.meuble == 1 %}
					<p>Meublé</p>
				{% else %}
					<p>Non meublé</p>

				{% endif %}

				<p>Nombre de pièces :
					{{p.getNombrePieces}}</p>
				<p>Superficie en m2 :
					{{p.superficie}}</p>
				<p>Loyer mensuel en € :
					{{p.loyer}}</p>
				<p>Caution en € :
					{{p.caution}}</p>
				<p>Date de disponibilité :
					{{p.getDateDebut|date('d/m/Y')}}</p>
				<p>Durée de location proposée (en mois) :
					{{p.getDureeBail}}</p>

				{% if p.cave == 1 %}
					<p>cave : oui</p>
				{% else %}
					<p>cave : non</p>

				{% endif %}
				{% if p.getPlaceParking == 1 %}
					<p>parking : oui</p>
				{% else %}
					<p>parking : non</p>

				{% endif %}
				{% if p.ascenseur == 1 %}
					<p>ascenseur : oui</p>
				{% else %}
					<p>ascenseur : non</p>

				{% endif %}
				{% if p.gardien == 1 %}
					<p>gardien : oui</p>
				{% else %}
					<p>gadien : non</p>

				{% endif %}
				{% if p.balcon == 1 %}
					<p>balcon : oui</p>
				{% else %}
					<p>balcon : non</p>

				{% endif %}
				{% if p.getCuisineEquipee == 1 %}
					<p>cuisine équipée : oui</p>
				{% else %}
					<p>cuisine équipée : non</p>

				{% endif %}

				{% if p.getToiletteSeparee == 1 %}
					<p>toilette séparée : oui</p>
				{% else %}
					<p>toilette séparée : non</p>

				{% endif %}


			</div>
		</div>
	{% endfor %}
</div>{% endblock %}
