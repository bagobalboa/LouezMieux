{% extends "base.html.twig" %}

{% block title %}Créer une annonce
{% endblock %}

{% block body %}
	<nav class="navbar navbar-dark bg-dark">
		<img src="">
		<ul class="nav justify-content-end">
			<li class="nav-item">
				<a class="nav-link active" aria-current="page" href="">Accueil</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="">Se connecter</a>
			</li>
		</ul>
	</nav>
	<h1>Créer une annonce</h1>

	<form>
		<div class="mb-3">
			<label for="formFileMultiple" class="form-label"></label>
			<input class="form-control" type="file" id="formFileMultiple" multiple>
		</div>
		<div class="form-group">
			<label for="titre">nom du logement</label>
			<input type="text" class="form-control" name="titre-annonce" id="titre-annonce" aria-describedby="titre-help" placeholder="Titre" autofocus>
			<small id="titre-help" class="form-text text-muted">Nom du logement</small>
		</div>
		<div class="form-group">
			<label for="adresse">adresse du logement</label>
			<input type="text" class="form-control" name="adresse-logement" id="adresse-logement" aria-describedby="adresse-help" placeholder="adresse du logement" autofocus>
			<small id="adresse-help" class="form-text text-muted">Adresse du logement</small>
		</div>
		<div class="form-group">
			<label for="type">Type de logement</label>
			<input type="text" class="form-control" name="type" id="type-annonce" aria-describedby="type-help" placeholder="type du logement" autofocus>
			<small id="type-help" class="form-text text-muted">Type du logement</small>
		</div>
		<div class="form-group">
			<label for="superficie">Surperficie</label>
			<input type="text" class="form-control" name="superficie" id="superficie-annonce" aria-describedby="superficie-help" placeholder="superficie du logement" autofocus>
			<small id="superficie-help" class="form-text text-muted">superficie du logement</small>
		</div>
		<div class="form-check">
			<input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
			<label class="form-check-label" for="flexRadioDefault1">
				Meublée
			</label>
		</div>
		<div class="form-check">
			<input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
			<label class="form-check-label" for="flexRadioDefault2">
                non Meublée
 			</label>
		</div>
	</form>


</div>{% endblock %}
